part: req.body.part,
date: MyDate,
link: req.body.link,
telegramId: req.body.telegramId,
minutes: req.body.minutes,
seconds: req.body.seconds,
isAskedByBot: req.body.asked,
isAnswered: req.body.isAnswered %>
